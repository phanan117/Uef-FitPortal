@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<FitPortal.Areas.Admin.Models.StudentResearchViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Nghiên cứu khoa học sinh viên</h1>
    <div class="x_content">
        @if(TempData["msg"]!=null)
        {
            <div class="text-danger">@TempData["msg"]</div>
        }
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Họ và tên</th>
                <th>MSSV</th>
                <th>Email</th>
                <th>Thao tác</th>
            </tr>
            </thead>
            <tbody>
                @{
                    if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.StudentCode</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/admin/research/viewresearch?IDStudent=@item.Id" class="btn btn-round btn-info"><i class="fa fa-th-list"></i></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
