@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FitPortal.Areas.Admin.Models.PostCategoryViewModel
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
                    <form asp-area="Admin" asp-controller="Post" asp-action="AddCategory"  class="form-horizontal form-label-left" method="post">

                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="">Tên danh mục <span class="required" asp-validation-for="CategoryName">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          <input type="text" asp-for="CategoryName"class="form-control col-md-7 col-xs-12">
                        </div>
                      </div>
                      @if (TempData["msg"] != null)
                         {
                    <div class="form-group">
                       <span class="text-info">@TempData["msg"]</span>
                    </div>
                         }
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                          <button type="submit" class="btn btn-info">Thêm mới</button>
                          <a type="button" asp-area="Admin" asp-controller="Post" asp-action="ManageCategory">
                          <button type="button" class="btn btn-info">Trở về</button>
                          </a>
                        </div>
                      </div>
                    </form>
