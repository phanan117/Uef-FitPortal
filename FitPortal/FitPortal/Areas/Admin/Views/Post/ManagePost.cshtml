@using FitPortal
@using FitPortal.Models
@using FitPortal.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    List<FitPortal.Areas.Admin.Models.PostInformationViewModel> list = (List<FitPortal.Areas.Admin.Models.PostInformationViewModel>)ViewBag.listInfor;
}
@section DoanScript{
    <script src="/js//ListPost.js"></script>
}
<h1>Quản lý bài viết</h1>
<button type="button" class="btn btn-info">
<a type="button" asp-area="Admin" asp-controller="Post" asp-action="AddPost">Thêm mới</a></button>
                    <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Tên bản tin</th>
                          <th>Thể loại</th>
                          <th>Ngày tạo</th>
                          <th>Người tạo</th>
                          <th>Hiển thị</th>
                          <th>#</th>
                        </tr>
                      </thead>
                      <tbody>
                            @{
                                foreach(var item in list)
                                {
                                            <tr>
                                                <td>@item.PostName</td>
                                                <td>@item.CategoryName</td>
                                                <td>@item.DateCreated</td>
                                                <td>@item.UserCreate</td>
                                                <td>
                                                    @*<input onchange="SomeMethod(this)" id="@item.Id" type="checkbox" class="js-switch" @Html.Raw(@item.IsDisplay == true ? "checked":"")/>*@
                                                    <a href="#" class="btn-active" data-id="@item.Id">@(item.IsDisplay?"Show":"Hide")</a>                                      
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Xóa","DeletePost","Post",new{id = item.Id});
                                                </td>
                                            </tr>
                                }
                            }
                        
                      </tbody>
                    </table>
                  </div>