@using FitPortal
@using FitPortal.Models
@using FitPortal.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FitPortal.Areas.Admin.Models.TeacherAssignViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Quản lý lịch công tác giảng viên</h1>
<!--Popup start-->
<div class="modal" tabindex="-1" id="form-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
<!--Popup end-->
    <div class="x_content">
    <table id="datatable" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Tên giảng viên</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
        </thead>
        <tbody>
            @{
                if(Model != null)
                {
                    foreach(var item in Model)
                    {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>
                                    <a href="/admin/work/workingschedule?IDTeacher=@item.Id" class="btn btn-info">Xem lịch công tác</a>
                                </td>
                            </tr>
                    }
                }
                    
            }
            </tbody>
        </table>
        </div>
        @section DoanScript{
            <script src="/js/popupCRUD.js"></script>
        }
