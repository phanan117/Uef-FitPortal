@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<FitPortal.Areas.Admin.Models.SeeListViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    string ClassName = (string)ViewBag.ClassCode;
}
<h2>Danh sách sinh viên của lớp: @ClassName</h2>
    <div class="x_content">
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Tên sinh viên</th>
                <th>Mã số sinh viên</th>
                <th>Thao tác</th>
            </tr>
            </thead>
            <tbody>
                @{
                    if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                                <tr>
                                    <td>@item.StudentName</td>
                                    <td>@item.StudentCode</td>
                                    <td>
                                        <a href="/admin/class/deletestudent?IDStudent=@item.StudentId" class="btn btn-round btn-danger"><i class="fa fa-circle-o-notch"></i></a>
                                    </td>
                                </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
