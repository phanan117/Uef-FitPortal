
@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity;
@model FitPortal.Areas.Admin.Models.SetClassViewModel
@{
    Layout = null;
    int studentID = ViewBag.StudentId;
}
<form onsubmit="jQueryAjaxPost(this)" asp-area="Admin" asp-controller="Student" asp-action="SetClass" class="form-horizontal form-label-left" method="post">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <input asp-for="StudentID" value="@studentID" readonly/>
        @Html.DropDownListFor(m => m.ClassID, (IEnumerable<SelectListItem>) ViewBag.Clases, new { @class = "col-md-6 col-sm-6 col-xs-12" })
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <button type="submit" class="btn btn-info">Thêm mới</button>
    </div>
    </div>
</form>