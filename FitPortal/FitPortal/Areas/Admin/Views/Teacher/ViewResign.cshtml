@using FitPortal
@using FitPortal.Models
@using FitPortal.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FitPortal.Models.Domain.Teachers>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Quản lý giảng viên</h1>
    <div class="x_content">
    <table id="datatable" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th width="12%">Mã giảng viên</th>
            <th width="12%">Tên giảng viên</th>
            <th width="12%">Ảnh chân dung</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Ngày sinh</th>
            <th width="8%">Giới tính</th>
            <th>Địa chỉ</th>
        </tr>
        </thead>
        <tbody>
            @{
                if(Model != null)
                {
                    foreach(var item in Model)
                {
                        <tr>
                        <td>@item.TeacherCode</td>
                        <td>@item.Name</td>
                        <td>
                        <img src="@item.Avatar" class="img-thumbnail" width="100" height="100"/>
                        </td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.DayOfBirth</td>
                        <td>@item.Gender</td>
                        <td>@item.Address</td>
                        </tr>
                }
                }
            }
        </tbody>
    </table>
    </div>
