@using FitPortal
@using FitPortal.Models
@using FitPortal.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FitPortal.Models.Domain.Teachers>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Quản lý giảng viên</h1>
<a asp-action="AddTeacher" asp-controller="Teacher" asp-area="Admin" class="btn btn-info">Thêm mới</a>
    <div class="x_content">
    <table id="datatable" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th width="12%">Mã giảng viên</th>
            <th width="12%">Tên giảng viên</th>
            <th width="12%">Ảnh chân dung</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Ngày sinh</th>
            <th width="8%">Giới tính</th>
            <th>Địa chỉ</th>
            <th width="8%">Trạng thái</th>
            <th width="12%">Thao tác</th>
        </tr>
        </thead>
        <tbody>
            @{
                foreach(var item in Model)
                {
                        <tr>
                        <td>@item.TeacherCode</td>
                        <td>@item.Name</td>
                        <td>
                        <img src="@item.Avatar" class="img-thumbnail" width="100" height="100"/>
                        </td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.DayOfBirth</td>
                        <td>@item.Gender</td>
                        <td>@item.Address</td>
                        <td>@(item.IsDeleted ? "Hoạt động" : "Dừng")</td>
                        <td>
                                <a  class="btn btn-round btn-info" href="/admin/teacher/editteacher?IDTeacher=@item.Id"><i class="fa fa-edit"></a>
                                <span>|</span>
                                <a  class="btn btn-round btn-danger" href="/admin/teacher/deleteteacher?IDTeacher=@item.Id"><i class="fa fa-circle-o-notch"></a>
                        </td>
                        </tr>
                }
            }
        </tbody>
    </table>
    </div>
