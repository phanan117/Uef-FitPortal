@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Quản vai trò của hệ thống</h1>
<a onclick="showInPopup('@Url.Action("AddRole","Role",new {area = "Admin"},Context.Request.Scheme)','Thêm mới vai trò')" class="btn btn-info">Thêm mới vai trò</a>
<!--Popup start-->
<div class="modal" tabindex="-1" id="form-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
<!--Popup end-->
    <div class="x_content">
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Mã vai trò</th>
                <th>Tên vai trò</th>
                <th>Thao tác</th>
            </tr>
            </thead>
            <tbody>
                @{
                    if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("EditRole","Role",new{IDRole=item.Id},Context.Request.Scheme)','Sửa vai trò')" class="btn btn-round btn-info">Sửa</a>
                                <span>|</span>
                                <a class="btn btn-round btn-danger" href="/admin/role/deleterole?IDRole=@item.Id">Xóa</a>
                            </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
@section DoanScript{
    <script src="/js/popupCRUD.js"></script>
}
