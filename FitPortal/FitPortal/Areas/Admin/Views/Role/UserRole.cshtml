@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@model List<FitPortal.Areas.Admin.Models.UserRoleViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<h1>Quản lý vai trò người dùng</h1>

<!--Popup start-->
<div class="modal" tabindex="-1" id="form-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
<!--Popup end-->
    <div class="x_content">
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Tên người dùng</th>
                <th>Email</th>
                <th>Thao tác</th>
            </tr>
            </thead>
            <tbody>
                @{
                    if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                <a class="btn btn-round btn-info" href="/admin/role/managerrole?IDUser=@item.UserID">Xem vai trò</a>
                            </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
@section DoanScript{
    <script src="/js/popupCRUD.js"></script>
}

