@using FitPortal
@using FitPortal.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<FitPortal.Areas.Admin.Models.OutlineViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    int IDSubject = (int)ViewBag.IDSubject;
}

<h2>Quản lý đề cương</h2>
    <div class="x_content">
        @if(TempData["msg"]!=null)
        {
            <div class="text-danger">@TempData["msg"]</div>
        }
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Tên đề cương</th>
                <th>File</th>
                <th><a href="/admin/outline/addoutline?IDSubject=@IDSubject" class="btn btn-round btn-info">Thêm mới môn học</a></th>
                
            </tr>
            </thead>
            <tbody>
                @{
                    if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.File</td>
                                <td>
                                    <a href="/admin/outline/editoutline?IDOutline=@item.Id" class="btn btn-round btn-info"><i class="fa fa-edit"></i></a>
                                    <a href="/admin/outline/deleteoutline?IDOutline=@item.Id" class="btn btn-round btn-danger"><i class="fa fa-circle-o-notch"></i></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>

