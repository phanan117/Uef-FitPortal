@using FitPortal.Areas.Admin.Models
@model FitPortal.Models.UserProfileViewModel
@{
    List<WorkingScheduleViewModel> wmodel = (List<WorkingScheduleViewModel>)ViewBag.Work;
}
<div class="container">
    <div class="panel panel-midnightblue">
        @{
            if(Model != null)
            {
                <table class="table table-condensed">
                    <tbody>
                        <tr>
                            <td><h3>@Model.UserName</h3></td>
                        </tr>
                        <tr>
                            <td>Ngày sinh:</td>
                            <td>@Model.DayOfBirth.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <td>Mã số sinh viên:</td>
                            <td>@Model.UserCode</td>
                        </tr>
                        <tr>
                            <td>Điện thoại:</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>@Model.Email</td>
                        </tr>
                    </tbody>
                </table>
                
                @if(wmodel != null)
                {
                        <h3>Lịch công tác:</h3>
                        <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>Tên công việc</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Địa điểm</th>
                        </tr>
                        </thead>
                        <tbody>
                            @{
                                
                                foreach(var item in wmodel)
                                {
                                        <tr>
                                            <td>@item.WorkName</td>
                                            <td>@item.StartDate.ToShortDateString()</td>
                                            <td>@item.EndDate.ToShortDateString()</td>
                                            <td>@item.Address</td>
                                        </tr>
                                }
                    
                            }
                            </tbody>
                        </table>
                }
                
            }
        }
    </div>
</div>
